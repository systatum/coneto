{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/type/*": ["type/*"],
      "@/constants/*": ["constants/*"],
      "@/lib/*": ["lib/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["components", "lib", "constants", "type", "index.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.*",
    "**/*.test.*",
    ".storybook",
    "storybook-static"
  ]
}
