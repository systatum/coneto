{
  "name": "@systatum/coneto",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./constants/*": {
      "import": "./dist/constants/*.js",
      "types": "./dist/constants/*.d.ts"
    },
    "./lib/*": {
      "import": "./dist/lib/*.js",
      "types": "./dist/lib/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/systatum/coneto"
  },
  "author": "Adam Noto Hakarsa",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "ui",
    "tailwind",
    "coneto"
  ],
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "pnpm build-css && pnpm build-ts && pnpm copyjs && node inject-style.js",
    "build-ts": "pnpm tsc -p tsconfig.build.json",
    "build-css": "pnpm exec tailwindcss -i ./shared.css -o ./dist/shared.css --minify",
    "copyjs": "rsync -avm --include='*/' --include='*.js' --exclude='*' lib/ dist/lib/",
    "publish-coneto": "pnpm build && pnpm publish",
    "generate-barrel": "barrelsby --excludePattern \\.stories\\.",
    "test-storybook": "playwright install chromium && test-storybook",
    "type-check": "tsc --noEmit",
    "lint": "eslint '**/*.{ts,tsx}'",
    "format": "prettier --write .",
    "build-chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-slot": "^1.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.12.1",
    "react-hook-form": "^7.56.3",
    "react-responsive": "^10.0.1",
    "react-swipeable": "^7.0.2",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/js": "^9.26.0",
    "@floating-ui/react": "^0.27.8",
    "@remixicon/react": "^4.6.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/addon-storysource": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/experimental-addon-test": "^8.6.14",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/preview-api": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.22.0",
    "@storybook/theming": "^8.6.14",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "barrelsby": "^2.8.1",
    "chromatic": "^11.28.2",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^15.15.0",
    "libphonenumber-js": "^1.12.8",
    "playwright": "^1.54.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.4.0",
    "vite": "^6.3.5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
